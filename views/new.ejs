<form class="ui form" action="/books/create" method="POST">
    <div class="disabled field">
        <label>Book Name</label>
        <input type="text" placeholder="Name" name="book[name]" value="<%= bookName %>">
    </div>
    <div class="field">
        <label>Book Image</label>
        <input type="text" placeholder="Image" name="book[image]">
    </div>
    <div class="field">
            <label>Review</label>
            <textarea name="book[review]"></textarea>
    </div>
    <button class="ui button" type="submit">Submit</button>
</form>

