<% include ../partials/header %>

<div class="ui message">
  <h1 class="ui header">Welcome to Booky</h1>
  <p>This is a template for a simple marketing or informational website. It includes a large callout called a jumbotron and three supporting pieces of content. Use it as a starting point to create something more unique.</p>
  <a class="ui blue button" href="/books/search">Search Books &raquo;</a>
  </div>
  <div class="ui link cards grid">
    <% books.forEach(function(book) { %>    
      <span class="card three wide column">
        <a class="image" href="/books/<%= book._id %>">
          <img src="<%= book.image %>">
        </a>
        <div class="content">
          <a class="header" href="/books/<%= book._id %>"><%= book.name %></a>
          <div class="meta">
            <a href="/books/<%= book._id %>">Author Name</a>
          </div>
          <div class="description">
            <%= book.review.substring(0, 20) + '...'%>
          </div>
        </div>
        <div class="extra content">
          <span class="right floated">
            Created On
          </span>
          <span>
            <i class="star icon"></i>
            Rating
          </span>
        </div>
      </span>    
    <% }); %>
  </div>

<% include ../partials/footer %>