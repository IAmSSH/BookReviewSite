<% include ../partials/header %>

<h1><%= book.name %></h1>

<img class="ui big rounded image" src="<%= book.image %>" alt="Book image">

<div class="ui segment" id="bottom-margin-show-page">
    <p><%= book.review %></p>
    <div class="ui divider"></div>
        <% if(currentUser && book.author.id.equals(currentUser._id)){ %>
        <a href="/books/<%= book._id %>/edit"><i class="pencil alternate icon"></i></a>
        <form action="/books/<%= book._id %>?_method=DELETE" method="POST" style="display: inline">
            <button><i class="trash alternate outline icon"></i></button>
        </form>
        <% }else { %>
            <p style="font-style: italic">Created by <b><%= book.author.username %></b></p>
        <% } %>
</div>

<div class="ui segment">
    <a href="/books/<%= book._id %>/comments/new" class="ui button">Add a comment</a>
    <div class="ui divider"></div>
    <% book.comments.forEach(function(comment){ %>
        <p>
            <%= comment.content %>
        </p>
    <% }); %>
</div>
<% include ../partials/footer %>